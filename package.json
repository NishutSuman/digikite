{
  "name": "digikite",
  "version": "1.0.0",
  "description": "DigiKite - Digital Marketing Platform",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd digikite-server && npm run dev",
    "dev:client": "cd digikite-client && npm run dev",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd digikite-client && npm run build",
    "build:server": "cd digikite-server && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "workspaces": [
    "digikite-server",
    "digikite-client"
  ]
}